<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.news.NewsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/click_on_posts"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:backgroundTint="#00000000"
                android:background="#00000000"
                android:textColor="#707070"
                android:textSize="20sp"
                android:text="Посты"
                android:textFontWeight="400"
                />

            <Button
                android:id="@+id/click_on_articles"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:backgroundTint="#00000000"
                android:background="#00000000"
                android:textColor="#707070"
                android:textSize="20sp"
                android:text="Статья"
                android:textFontWeight="400"
                />

            <Button
                android:id="@+id/click_on_news"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:backgroundTint="#00000000"
                android:background="#00000000"
                android:textColor="#707070"
                android:textSize="20sp"
                android:text="Новости"
                android:textFontWeight="400"
                />

        </LinearLayout>
        <fragment
            android:id="@+id/scrolling_news"
            android:name="com.example.specialistsru.ui.news.newScrollingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            tools:layout="@layout/fragment_new_scrolling"
            />

    </LinearLayout>

</FrameLayout>