<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mypage.MyPageFragment"
    android:orientation="vertical"
    android:background="#DBDBDB">


    <LinearLayout
        android:id="@+id/header_second_my_page"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/my_page_profile_header"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="@drawable/imageview_shape_my_page"
                app:layout_constraintBottom_toTopOf="parent"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="182dp"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="Имя Фамилия"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="182dp"
                android:layout_height="54dp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#3F437C"
                android:text="Опубликовать"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/my_page_profile_header"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Коллеги"
            android:background="#00000000"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_page_profile_header"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:padding="5dp">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="411dp"
                android:layout_height="75dp"

                >
                <Button
                    android:layout_width="82dp"
                    android:layout_height="40dp"
                    android:textColor="#707070"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:text="Фото"
                    android:textFontWeight="400"
                    android:textSize="10dp"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginLeft="17dp"/>
                <Button
                    android:layout_width="82dp"
                    android:layout_height="40dp"
                    android:textColor="#707070"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:text="Видео"
                    android:textFontWeight="400"
                    android:textSize="10dp"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginLeft="17dp"/>
                <Button
                    android:layout_width="112dp"
                    android:layout_height="40dp"
                    android:textColor="#707070"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:text="Портофолио"
                    android:textFontWeight="400"
                    android:textSize="10dp"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginLeft="17dp"/>
                <Button
                    android:layout_width="82dp"
                    android:layout_height="40dp"
                    android:textColor="#707070"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:text="Статьи"
                    android:textFontWeight="400"
                    android:textSize="10dp"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginLeft="17dp"/>
                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:textColor="#707070"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:text="Новости"
                    android:textFontWeight="400"
                    android:textSize="10dp"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginLeft="17dp"/>
                <Button
                    android:layout_width="82dp"
                    android:layout_height="40dp"
                    android:textColor="#707070"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:text="Отзывы"
                    android:textFontWeight="400"
                    android:textSize="10dp"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginLeft="17dp"/>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>