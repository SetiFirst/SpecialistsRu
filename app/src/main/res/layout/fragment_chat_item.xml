<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ChatItemFragment">

    <LinearLayout
        android:id="@+id/chat_id"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/chat_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle"
            android:backgroundTint="#E4E2E2"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:id="@+id/chat_text_layout"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp">
            <TextView
                android:id="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="Имя Фамилия"
                />

            <TextView
                android:id="@+id/message_text"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="2"
                android:text="Текст. На столько большой, что не помещается ни в какие рамки вселенной и не пож каким преддлогом. Вопрос. Как такое возможно? Но это возможно" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>